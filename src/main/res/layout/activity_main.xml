<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:gravity="bottom|end"
        android:padding="24dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="48sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">

        <Button android:id="@+id/btn_clear" android:text="C" android:layout_columnSpan="3" android:layout_width="0dp" android:layout_gravity="fill"/>
        <Button android:id="@+id/btn_div" android:text="/" android:layout_gravity="fill"/>

        <Button android:id="@+id/btn_7" android:text="7" android:layout_gravity="fill"/>
        <Button android:id="@+id/btn_8" android:text="8" android:layout_gravity="fill"/>
        <Button android:id="@+id/btn_9" android:text="9" android:layout_gravity="fill"/>
        <Button android:id="@+id/btn_mul" android:text="x" android:layout_gravity="fill"/>

        <Button android:id="@+id/btn_4" android:text="4" android:layout_gravity="fill"/>
        <Button android:id="@+id/btn_5" android:text="5" android:layout_gravity="fill"/>
        <Button android:id="@+id/btn_6" android:text="6" android:layout_gravity="fill"/>
        <Button android:id="@+id/btn_sub" android:text="-" android:layout_gravity="fill"/>

        <Button android:id="@+id/btn_1" android:text="1" android:layout_gravity="fill"/>
        <Button android:id="@+id/btn_2" android:text="2" android:layout_gravity="fill"/>
        <Button android:id="@+id/btn_3" android:text="3" android:layout_gravity="fill"/>
        <Button android:id="@+id/btn_add" android:text="+" android:layout_gravity="fill"/>

        <Button android:id="@+id/btn_0" android:text="0" android:layout_columnSpan="2" android:layout_width="0dp" android:layout_gravity="fill"/>
        <Button android:id="@+id/btn_dot" android:text="." android:layout_gravity="fill"/>
        <Button android:id="@+id/btn_equal" android:text="=" android:backgroundTint="#4CAF50" android:textColor="#FFFFFF" android:layout_gravity="fill"/>

    </GridLayout>
</LinearLayout>